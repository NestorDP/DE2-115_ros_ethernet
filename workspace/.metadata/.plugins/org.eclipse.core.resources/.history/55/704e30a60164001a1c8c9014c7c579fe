#ifndef FREERTOS_IP_CONFIG_H
#define FREERTOS_IP_CONFIG_H

#define ipconfigUSE_TCP_WIN       0
#define ipconfigTCP_TX_BUFFER_LENGTH   ( 2 * ipconfigTCP_MSS )
#define ipconfigTCP_RX_BUFFER_LENGTH   ( 2 * ipconfigTCP_MSS )

#define ipconfigNETWORK_MTU   1500
#define ipconfigTCP_MSS       522

#define ipconfigEVENT_QUEUE_LENGTH 12

#define ipconfigNUM_NETWORK_BUFFER_DESCRIPTORS  2
#define ipconfigIP_TASK_PRIORITY configMAX_PRIORITIES - 1

#define ipconfigARP_CACHE_ENTRIES 30

#define ipconfigMAX_ARP_RETRANSMISSIONS 5
#define ipconfigMAX_ARP_AGE 150
#define ipconfigIP_TASK_STACK_SIZE_WORDS 10



#endif /* FREERTOS_IP_CONFIG_H */
